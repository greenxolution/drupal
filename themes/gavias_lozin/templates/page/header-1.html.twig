<header id="header" class="header-default">

  {% set class_sticky = '' %}
  {% if sticky_menu == 1 %}
    {% set class_sticky = 'gv-sticky-menu' %}
  {% endif %}  
  <div class="{{ class_sticky }}">
   <div class="header-main button-header-{{ gva_theme_setting('hide_header_button_link') }}">
      <div class="header-content-layout">
         <div class="header-main-inner p-relative">
            <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12 content-inner">
                <div class="branding">
                  {% if page.branding %}
                    {{ page.branding }}
                  {% endif %}  
                </div>
                <div class="header-inner clearfix">
                  <div class="main-menu">
                    <div class="area-main-menu">
                      <div class="area-inner">
                          <div class="gva-offcanvas-mobile">
                            <div class="close-offcanvas hidden"><i class="fa fa-times"></i></div>
                            <div class="main-menu-inner">
                              {% if page.main_menu %}
                                {{ page.main_menu }}
                              {% endif %}
                            </div>

                            {% if page.offcanvas %}
                              <div class="after-offcanvas hidden">
                                {{ page.offcanvas }}
                              </div>
                           {% endif %}
                          </div> 
                          <div id="menu-bar" class="menu-bar d-lg-none d-xl-none">
                            <span class="one"></span>
                            <span class="two"></span>
                            <span class="three"></span>
                          </div>
                        
                          {% if gva_theme_setting('hide_header_button_link') != 'hide' %}
                            <div class="header-button">
                              {% if custom_account %}
                                <a href="{{ base_url }}{{ gva_theme_setting('header_button_link') }} ">{{'+ Add Listing'|t}}</a>
                              {% else %}
                                <a href="{{ path('user.login') }}">{{'+ Add Listing'|t}}</a>
                              {% endif %}
                            </div>
                          {% endif %} 

                          <div class="gva-user-region user-region">
                            <span class="icon">
                              {% if user_picture %}
                                <img src="{{ file_url(user_picture) }}" alt=""/>
                              {% else %}  
                                <i class="fa fa-user"></i>
                              {% endif %}
                            </span>
                            <div class="user-content">  
                              {% if custom_account %}
                                <div class="account-message">{{ custom_account|raw }}</div>
                              {% endif %}  
                              <ul class="user-links">
                                {% if custom_account %}
                                  <li><a href="{{ base_url }}{{ gva_theme_setting('header_button_link') }} ">{{'+ Add Listing'|t}}</a></li>
                                  <li><a href="{{ path('user.page') }}">{{ '+ My Account'|t }}</a></li>
                                  <li><a href="{{ path('user.logout') }}">{{ '+ Logout'|t }}</a></li>
                                {% else %}
                                  <li><a href="{{ path('user.login') }}">{{ '+ Login'|t }}</a></li>
                                  <li><a href="{{ path('user.register') }}">{{ '+ Register'|t }}</a></li>
                                {% endif %}  
                              </ul>
                            </div>  
                          </div>


                          {% if page.search %}
                            <div class="gva-search-region search-region d-none">
                              <span class="icon"><i class="fa fa-search"></i></span>
                              <div class="search-content">  
                                {{ page.search }}
                              </div>  
                            </div>
                          {% endif %}

                      </div>
                    </div>
                  </div>  
                </div> 
              </div>

            </div>
         </div>
      </div>
   </div>
  </div>
</header>
